<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/rounded">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_app_button"
        android:src="@drawable/icon"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:maxWidth="36dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@+id/widget_app_button"
        android:layout_toRightOf="@+id/widget_app_button"
        android:layout_toLeftOf="@+id/actionsLinearLayout"
        android:layout_toStartOf="@+id/actionsLinearLayout"
        android:layout_centerVertical="true" >

        <TextView android:id="@+id/appwidget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/widget_text_color"
            android:textSize="20dp"
            android:textStyle="bold"
            android:contentDescription="@string/appwidget_title_content_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/username"
            android:id="@+id/widget_username"
            android:textColor="@color/widget_text_color"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/actionsLinearLayout"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_upload"
            android:src="@drawable/ic_action_upload"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_create"
            android:src="@drawable/ic_action_create_dir"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_refresh"
            android:src="@drawable/ic_action_refresh"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp" />
    </LinearLayout>

</RelativeLayout>